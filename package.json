{
  "name": "project-gericht-restaurant",
  "version": "0.1.0",
  "license": "MIT",
  "private": true,
  "run": {
    "app": "yarn dev",
    "update": "yarn update",
    "empty": "yarn empty",
    "message": [
      "yarn git:check",
      "yarn git:prepare"
    ],
    "cleanup": [
      "yarn test-all",
      "yarn stage-all",
      "yarn check:format",
      "yarn check:lint",
      "yarn apply:format",
      "yarn apply:lint"
    ]
  },
  "scripts": {
    "dev": "concurrently -k -n 'server,client' -c 'yellow,white' npm:\"dev:api\" npm:\"dev:ui\"",
    "dev:api": "json-server ./config/server/_data.js",
    "dev:ui": "vite",
    "_build": "vite build",
    "serve": "vite preview",
    "build": "echo \"no building yet\"",
    "test": "echo \"no testing yet\"",
    "_preinstall": "git pull origin develop",
    "_postinstall": "husky install",
    "check:format": "prettier --check \"./src/**/*.{js,jsx,json,md,mdx}\"",
    "check:lint": "eslint \"./src/**/*.{js,jsx}\"",
    "apply:format": "prettier --write \"./src/**/*.{js,jsx,json,md,mdx}\"",
    "apply:lint": "eslint --fix \"./src/**/*.{js,jsx}\"",
    "test-all": "npm-run-all check:format check:lint",
    "stage-all": "lint-staged",
    "git:check": "commitlint --edit",
    "git:prepare": "cz",
    "undo:soft": "git reset --soft HEAD~1",
    "undo:hard": "git reset --hard HEAD~1",
    "undo:recent": "git commit --ammend -m",
    "preupdate": "echo \"updating develop branch & new packages\"",
    "update": "echo \"merge updates\" && git pull origin develop",
    "postupdate": "echo \"yarn install\" && yarn install",
    "preempty": "echo \"removing all 'yarn.lock' & 'node_modules'\"",
    "empty": "find . -name \"yarn.lock\" && rimraf yarn.lock",
    "postempty": "find . -name \"node_modules\" && rimraf node_modules"
  },
  "dependencies": {
    "@hookform/devtools": "^4.1.0",
    "@hookform/resolvers": "^2.8.8",
    "framer-motion": "^6.2.8",
    "ky": "^0.30.0",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.28.1",
    "react-icons": "^4.3.1",
    "react-loader-spinner": "^6.0.0-0",
    "react-router-dom": "^6.2.2",
    "uniqid": "^5.4.0",
    "web-vitals": "^2.1.4",
    "zod": "^3.14.3"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@tailwindcss/typography": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "^12.1.4",
    "@testing-library/user-event": "^13.5.0",
    "@vitejs/plugin-react": "^1.2.0",
    "autoprefixer": "^10.4.4",
    "babel-plugin-macros": "^3.1.0",
    "babel-plugin-styled-components": "^2.0.6",
    "babel-plugin-twin": "^1.0.2",
    "commitizen": "^4.2.4",
    "concurrently": "^7.0.0",
    "cz-conventional-changelog": "^3.3.0",
    "editorconfig": "^0.15.3",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-editorconfig": "^3.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "json-server": "^0.17.0",
    "lint-staged": "^12.3.7",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.12",
    "prettier": "^2.6.1",
    "rimraf": "^3.0.2",
    "styled-components": "^5.3.5",
    "tailwindcss": "^3.0.23",
    "twin.macro": "^2.8.2",
    "vite": "^2.8.6",
    "vite-plugin-eslint": "^1.3.0",
    "vite-plugin-html-config": "^1.0.8"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
